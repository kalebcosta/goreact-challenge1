{
  "parser": "babel-eslint",
  "extends": ["airbnb", "prettier", "prettier/react"],
  "env": {
    "browser": true,
    "jest": true
  },

  "plugins": ["react", "jsx-a11y", "import"],

  "rules": {
      "quotes": [
        2,
        "single",
        "avoid-escape"
      ],

    "react/jsx-filename-extension": [
      "error",
      {
        "extensions": [".js", ".jsx"]
      }
    ],

    "no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^_"
      }
    ],

    "global-require": "off",
    "react/no-access-state-in-setstate": "off",
    "react/destructuring-assignment": "off",
    "import/prefer-default-export": "off"
  }
}
